{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "@types/node",
      "@types/uuid",
      "@types/jest",
      "@nuxt/types",
      "@nuxt/vue-app",
      "nuxt-i18n",
      "buefy/types"
    ]
  },
  "exclude": [
    "node_modules",
    "**/sw.js"
  ]
}
